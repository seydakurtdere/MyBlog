@model MyBlog.Blog.Models.SidebarModel
<!-- Start Blog Post Sidebar -->
<div class="col-lg-4 sidebar-widgets">
    <div class="widget-wrap">
        <div class="single-sidebar-widget post-category-widget">
            <h4 class="single-sidebar-widget__title">Kategoriler</h4>
            <ul class="cat-list mt-20">
                @foreach (var item in Model.CategoryList)
                {
                    <li>
                        <a href="/Home/Index/id" class="d-flex justify-content-between">
                            <p>@item.CategoryName</p>
                            <p>(@item.NumberOfBlogs)</p>
                        </a>
                    </li>
                }
            </ul>
        </div>

        <div class="single-sidebar-widget popular-post-widget">
            <h4 class="single-sidebar-widget__title">Son Eklenenler</h4>
            <div class="popular-post-list">
                @foreach (var item in Model.BlogList)
                {
                    <div class="single-post-list">
                        <div class="thumb">
                            <img class="card-img rounded-0" src="http://localhost:51584/files/blogs/@item.ImagePath" alt="">
                            <ul class="thumb-info">
                                <li><a href="#">Admin</a></li>
                                <li><a href="#">@string.Format("{0}.{1}", item.CreatedDate.Day, item.CreatedDate.Month) </a></li>
                            </ul>
                        </div>
                        <div class="details mt-20">
                            <a href="/Home/Detail/@item.BlogId">
                                <h6>@item.Title</h6>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
<!-- End Blog Post Siddebar -->
