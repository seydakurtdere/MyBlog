@model List<MyBlog.DTO.BlogDTO>
<!--================ Start Blog Post Area =================-->
<section class="blog-post-area section-margin mt-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="single-recent-blog-post">
                        <div class="thumb">
                            <a href="/Home/Detail/@item.BlogId"><img class="img-fluid" src="http://localhost:51584/files/blogs/@item.ImagePath" alt=""></a>

                            <ul class="thumb-info">
                                <li><a href="#"><i class="ti-user"></i>Admin</a></li>
                                <li><a href="#"><i class="ti-notepad"></i>@item.CreatedDate.ToShortDateString()</a></li>
                                <li><a href="#"><i class="ti-themify-favicon"></i>2 Comments</a></li>
                            </ul>
                        </div>
                        <div class="details mt-20">
                            <a href="/Home/Detail/@item.BlogId">
                                <h3>
                                    @item.Title
                                </h3>
                            </a>
                            <p class="tag-list-inline">Tag: <a href="#">travel</a>, <a href="#">life style</a>, <a href="#">technology</a>, <a href="#">fashion</a></p>
                            <p>@Html.Raw(item.BlogContent)</p>
                            <a class="button" href="/Home/Detail/@item.BlogId">Devamı... <i class="ti-arrow-right"></i></a>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-lg-12">
                        <nav class="blog-pagination justify-content-center d-flex">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a href="#" class="page-link" aria-label="Previous">
                                        <span aria-hidden="true">
                                            <i class="ti-angle-left"></i>
                                        </span>
                                    </a>
                                </li>
                                <li class="page-item active"><a href="#" class="page-link">1</a></li>
                                <li class="page-item"><a href="#" class="page-link">2</a></li>
                                <li class="page-item">
                                    <a href="#" class="page-link" aria-label="Next">
                                        <span aria-hidden="true">
                                            <i class="ti-angle-right"></i>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            @{
                Html.RenderAction("_SideBar", "Home");
            }
        </div>

    </div>
</section>
<!--================ End Blog Post Area =================-->